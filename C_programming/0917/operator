#include<stdio.h>

int main(void)
{
/*
//정수끼리의 산술연산자 오류
	printf("%lf\n", 20*4/9);		// 출력이 0으로 나온다 -> Fail
							// 이유 : 계산에 들어있는 수들이 정수형이면 답도 정수형으로 나온다, 즉 몫만 남고 나머지는 없애버림
							// 5/2가 2가 아니라 2.5가 나오게 하고싶으면 
							// 5.0/2 로 하거나 5/2.0 , 5.0/2.0 으로 하면 된다
							// 그것도 아니면 (double)5/2 로 하면 된다.		-> 이렇게 앞에 자료형을 붙이는 걸 '캐스팅'이라고 한다.
	
	printf("%lf\n", 20*4.0/9);
	printf("%lf\n", 20*(double)4/9);
*/

/*
//형변환(캐스팅)
	double d = 3.14;
				//실수하나를 주고, 그걸 정수형으로 출력하고 싶을때,
	printf("d의 정수부분 : %d\n", (int)d);		//casting 연산자 = 형변환 연산자 : 자료의 타입(형태)을 변환하는 연산자
										//(바꾸고 싶은 자료형)변수
	printf("-d : %.2lf\n", -d);		//부호연산자 - 
	printf("+d : %.2lf\n", +d);		//부호연산자 +
*/


//++a, a++
	double d = 3.14;
	int a = 10;
	printf("a++ : %d\n", a++);	//10이 출력된다
							//a++ 이라는게 뭘 하고 나서 a에다가 ++를 해줘라 라는 의미이다.
							//그래서 printf(a++)를 하면 a값인 10이 출력되고, a는 ++가 되어서 11이 된다(단지 출력값에 반영이 안되었을뿐)
							// 즉, a = 11, a++ = 10
	
	printf("++a : %d\n", ++a);	//위에서 a가 11이 되어있으니 거기다가 ++a를 했다
							//따라서 a = 12, ++a = 12 이다



	
}
