#include<stdio.h>

int main(void)
{
	int a,b;
	printf("정수 1(a) : ");
	scanf("%d", &a);
	printf("정수 2(b) : ");
	scanf("%d", &b);
	printf("a + b = %d\n", a+b);
	printf("a - b = %d\n", a-b);
	printf("a * b = %d\n", a*b);
	printf("a / b = %.5lf\n", (double)a/b);
	printf("=============================== \n");
	printf("a/b의 정수 부분: %d\n", a/b);
	printf("a/b의 소수 부분: %.5lf\n", (double)a/b-a/b);
	
}
