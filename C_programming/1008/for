		result *= i;
	}
	printf("%d\n", result);
*/


//a b 값을 바꿔치기
	int a, b, tmp;
	printf("작은수 : ");
	scanf("%d", &a);
	printf("큰수 : ");
	scanf("%d", &b);

	if(a>b)
	{
		tmp = a;
		a = b;
		b = tmp;
	}
	printf("a = %d, b = %d", a, b);


}
