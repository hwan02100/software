#include<stdio.h>

void main(void)
{

/*
	for(초기화 ; 조건식(반복횟수) ; 증감식(추가내용) )
	{
		반복하고자 하는 문장들
	}
*/

/*
//Hello World를 5번 출력하고 싶을때
	int i;
	for(i=0; i<5; i++)
	{	
		puts("Hello,World!");
	}
*/

/*
//Hello World를 20번 출력하고 싶을때
	int i;
	for(i=0; i<20; i++)
	{	
		puts("Hello,World!");
	}
*/

/*
//1부터 10까지 출력
	int i;
	for(i=1; i<11; i++)
	{	
		printf("%d\n", i);
	}
*/

//1부터 101까지의 홀수만 출력
/*
//방법1
	int i;
	for(i=0; i<=50; i++)
	{	
		printf("%d\t", 2*i+1);
	}

//방법2
	for(i=1; i<=101; i+=2)
	{	
		printf("%d\t", i);
	}
*/

/*
//a, b, .... ,z 출력
	int i;
	for(i='a'; i<='z'; i++)
	{
		printf("%c, ", i);
	}
*/

/*
//대문자로도 가능하다
	int i;
	for(i='A'; i<='Z'; i++)
	{
		printf("%c, ", i);
	}
*/

/*
//마지막에 , 가 거슬린다
	int i;
	for(i='A'; i<='Z'; i++)
	{
		printf("%c, ", i);
	}
		printf("\b\b ");
*/

/*
//1부터 10까지의 합
	int i, sum=0;
	for(i=1; i<11; i++)
	{
		sum += i;
	}
	printf("1부터 10까지의 합 : %d\n", sum);
*/

/*
// 작은수, 큰 수를 입력받아서 작은수부터 큰수까지의 합을 출력
	int i, a, b, sum;
	printf("작은수, 큰수 입력: ");
	scanf("%d %d", &a, &b);
	sum = a;
	for(i=a; i<=b; i++)
	{
		sum += i;
	}
	printf("%d~%d의 합 : %d", a, b, sum-a);
*/

/*
